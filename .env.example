# Joshua 7 â€” Content Shield environment variables
# All prefixed with J7_ to avoid collisions
# Copy to .env and adjust as needed

J7_DEBUG=false
J7_LOG_LEVEL=info
J7_HOST=0.0.0.0
J7_PORT=8000
J7_MAX_TEXT_LENGTH=500000
J7_BRAND_VOICE_TONE=professional
J7_BRAND_VOICE_TARGET_SCORE=60.0
J7_READABILITY_MIN_SCORE=30.0
J7_READABILITY_MAX_SCORE=80.0

# --- Security ---
# API key auth (leave blank to disable)
J7_API_KEY=
# CORS allowed origins (JSON array); use ["*"] only in development
J7_CORS_ALLOWED_ORIGINS=["*"]
# Trusted Host header values; set explicitly in production
J7_ALLOWED_HOSTS=["*"]
# Rate limiting (per IP, sliding window)
J7_RATE_LIMIT_REQUESTS=60
J7_RATE_LIMIT_WINDOW_SECONDS=60
# Max request body size in bytes (default 2 MiB)
J7_MAX_REQUEST_BODY_BYTES=2097152
