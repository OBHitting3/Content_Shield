# Joshua 7 â€” Content Shield environment variables
# All prefixed with J7_ to avoid collisions
# Copy to .env and adjust as needed

J7_DEBUG=false
J7_LOG_LEVEL=info
J7_HOST=127.0.0.1
J7_PORT=8000
J7_MAX_TEXT_LENGTH=500000
J7_MAX_FINDINGS_PER_VALIDATOR=50
J7_BRAND_VOICE_TONE=professional
J7_BRAND_VOICE_TARGET_SCORE=60.0
J7_READABILITY_MIN_SCORE=30.0
J7_READABILITY_MAX_SCORE=80.0

# Optional: set to require X-API-Key header on all /api/v1 endpoints
# J7_API_KEY=your-secret-key-here

# Optional: restrict CORS origins (comma-separated via nested delimiter)
# J7_CORS_ALLOWED_ORIGINS=["https://app.example.com"]
